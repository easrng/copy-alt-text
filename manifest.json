{
    "manifest_version": 2,
    "name": "Copy Alt Text",
    "description": "Add a context menu option to copy image alt text to the clipboard.",
    "version": "1.1",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite"
    ],
    "content_security_policy": "default-src 'none'"
}

{
    "manifest_version": 2,
    "name": "Copy Alt Text",
    "description": "Add a context menu option to copy image alt text to the clipboard.",
    "version": "1.2",
    "background": {
        "scripts": [
            "srcset.js",
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "notifications"
    ],
    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
    },
    "content_security_policy": "default-src 'none'"
}
